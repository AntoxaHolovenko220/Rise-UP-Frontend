{
	"compilerOptions": {
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"],
			"@assets/*": ["src/assets/*"],
			"@components/*": ["src/components/*"],
			"@pages/*": ["src/pages/*"],
			"@routes/*": ["src/routes/*"],
			"@api/*": ["src/api/*"],
			"@store/*": ["src/store/*"],
			"@hooks/*": ["src/hooks/*"],
			"@types/*": ["src/types/*"],
			"@utils/*": ["src/utils/*"]
		},
		"module": "ESNext",
		"moduleResolution": "Node",
		"jsx": "react-jsx",
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["src"]
}
